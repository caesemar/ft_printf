CC = gcc
CFLAGS = -Wall -Wextra -Werror
AR = ar -rcs
NAME = libftprintf.a
RM = rm -rf

################################################################################
##								OBJECTS									  ##
################################################################################
CFILES = ft_printf.c printf_functions.c
OBJS = $(CFILES:.c=.o)
################################################################################
##								RULES									  ##
################################################################################

all:        $(NAME)

$(NAME):	$(OBJS)
			@$(AR) $(NAME) $(OBJS)

%.o:%.c
			$(CC) $(CFLAGS) -c $^ -o $@
		
re:     	fclean all

fclean:     clean
			@$(RM) $(NAME)

clean:
			@$(RM) $(OBJS)

.PHONY: all re fclean clean